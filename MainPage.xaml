<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fomrcosniewiem.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="30" Margin="30">
            <Label
                Text="Blackjack"
                HorizontalOptions="Center"
                FontSize="32"
                FontAttributes="Bold"
                />
            <Label
                Text=""
                x:Name="WygranaLbl"
                HorizontalOptions="Center"
                FontSize="25"
                />
            <HorizontalStackLayout Spacing="50" x:Name="h3Stack" IsVisible="False">
                <Label
                    Text="Krupier: "
                    WidthRequest="100"
                    />
                <Label
                    Text="Karta nr. 1"
                    x:Name="KrupCard1Lbl"
                    />
                <Label
                    Text="Karta nr. 2"
                    x:Name="KrupCard2Lbl"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="50"  x:Name="h2Stack" IsVisible="False">
            <Label
                    Text="Gracz: "
                    WidthRequest="100"
                    />
                <Label
                    Text=""
                    x:Name="KartyGraczaLbl"
                    />
            </HorizontalStackLayout>
            <Label
                Text=""
                x:Name="TwPktLbl"
                FontSize="30"
                />
            <HorizontalStackLayout x:Name="h1Stack" IsVisible="False">
                <Button
                    Text="Pass"
                    x:Name="PassBtn"
                    WidthRequest="150"
                    Clicked="OnPassClicked"
                    />
                <Button
                    Text="Dobierz"
                    x:Name="DobierzBtn"
                    WidthRequest="150"
                    Clicked="OnDobierzClicked"
                    />
            </HorizontalStackLayout>
            <Button
                Text="Graj"
                WidthRequest="230"
                FontSize="30"
                FontAttributes="Bold"
                Clicked="OnGrajClicked"
                x:Name="GrajBtn"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
